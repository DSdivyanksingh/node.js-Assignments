<html>
  <head>
    <title>Database connection using express</title>
    <link href="./style.css" rel="stylesheet" />
  </head>
  <body>
    <div class="container">
      
      <% data.forEach(user=>{ %>
        
        
        <div class="card">
          <% if(user.isPromoted===null) { %>
          <div class="in-progress">
            <h3>
              <%= user.name %>
            </h3>
            <p>
              <%= user.email %>
            </p>
          </div>
          <% } else if(user.isPromoted===false){%>
            <div class="not_promoted">
              <h3>
                <%= user.name %>
              </h3>
              <p>
                <%= user.email %>
              </p>
            </div>
            <% } else if(user.isPromoted===true){%>
              <div class="promoted">
                <h3>
                  <%= user.name %>
                </h3>
                <p>
                  <%= user.email %>
                </p>
              </div>
              <% } %>
          <div class="form">
          <form class="select" method="POST" action="/users/<%= user._id %>?_method=PUT">
            <button id="edit-<%= user.name %>" type="submit">Promote / Demote</button>
          </form>
          <form class="delete" method="POST" action="/users/<%= user._id %>?_method=DELETE">
            <button id="delete-<%= user.name %>">Delete</button>
          </form>
        </div>
        </div>
        
        <%})%>
    
    </div>
    <div class="btn">
        <a href = "/form">Add User</a>
    </div>
  </body>
</html>
